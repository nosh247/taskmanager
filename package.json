{
  "name": "taskmanager",
  "version": "1.0.0",
  "description": "A comprehensive task management application built with React and .NET Core",
  "private": true,
  "scripts": {
    "dev": "concurrently \"npm run dev:api\" \"npm run dev:client\"",
    "dev:client": "cd client && npm run dev",
    "dev:api": "cd api && dotnet run",
    "build:client": "cd client && npm run build",
    "build:api": "cd api && dotnet build",
    "install:client": "cd client && npm install",
    "clean:client": "cd client && rm -rf node_modules dist"
  },
  "devDependencies": {
    "concurrently": "^7.6.0"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  }
} 